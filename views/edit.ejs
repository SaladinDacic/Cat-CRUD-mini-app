<%- include("partials/header") %>


<div class=" container">

    <form action="/cats/<%= cat._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="exampleFormControlInput1">Name</label>
          <input name="cat[title]" type="text" class="form-control" id="exampleFormControlInput1" value="<%= cat.title %>">
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Image link</label>
          <input name="cat[image]" type="text" class="form-control" id="exampleFormControlInput1" value="<%= cat.image %>">
        </div>

        <div class="form-group">
          <label for="exampleFormControlTextarea1">Example textarea</label>
          <textarea name="cat[body]" class="form-control" id="exampleFormControlTextarea1" rows="3"><%= cat.body %></textarea>
        </div>

        <div >
            <input class="btn btn-outline-primary" type="submit">
        </div>
    </form>


</div>

    
<%- include("partials/footer") %>
